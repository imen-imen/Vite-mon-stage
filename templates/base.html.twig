{# base.html.twig #}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Mon super titre{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% block stylesheets %}{% endblock %}
  </head>
  <body>
    {% block body %}
<header> 
  <nav class="bg-dark text-white py-3">
    <div class="container d-flex justify-content-between align-items-center flex-wrap">
      <a class="navbar-brand text-white fw-bold">VITE MON STAGE !</a>

      <div class="d-flex gap-3 flex-wrap align-items-center">
        <a class="text-white text-decoration-none" href="{{ path('app_index') }}">Accueil</a>
        <a class="text-white text-decoration-none" href="{{ path('app_apropos') }}">A Propos</a>

        {% if app.user %}
          <span class="text-white">Bonjour {{ app.user.email }}</span>
          <form action="{{ path('app_logout') }}" method="post" style="display:inline;">
            <button type="submit" class="btn btn-outline-light btn-sm">Déconnexion</button>
          </form>
        {% else %}
          <a class="btn btn-outline-light btn-sm" href="{{ path('app_login') }}">Connexion</a>
          <a class="btn btn-outline-light btn-sm" href="{{ path('app_register') }}">Inscription</a>
        {% endif %}
      </div>
    </div>
  </nav>

  <div class="bg-light py-3">
    <div class="container">
  <form method="get" action="{{ path('search') }}" class="d-flex gap-2 my-3">
      <input type="text" name="title" class="form-control" placeholder="Titre de l'offre">
      <input type="text" name="location" class="form-control" placeholder="Localisation">
      <button type="submit" class="btn btn-primary">Rechercher</button>
  </form>

    </div>
  </div>
</header>


<main class="container py-5">
  {% block content %}{% endblock %}
</main>


    <footer class="bg-dark text-white text-center py-4 mt-5">
      <div class="container">
        <p class="mb-0">&copy; 2025 Site développé par Imen. Tous droits réservés.</p>
      </div>
    </footer>
    {% endblock %}

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    {% block javascript %}{% endblock %}
  </body>
</html>
